                "run": {
                    "seconds": 0.5,
                    "fps": 30
                }
            },
            {
                "animation": "BiblioPixelAnimations.circle.bloom.CircleBloom",
                "run": {
                    "seconds": 0.5,
                    "fps": 30
                }
            },
            {
                "animation": "BiblioPixelAnimations.circle.circle_clock.CircleClock",
                "run": {
                    "seconds": 0.5,
                    "fps": 30
                }
